# Admin Authentication
ADMIN_USERNAME=admin
# Generate with: echo -n "your-password" | bun run scripts/hash-password.ts
ADMIN_PASSWORD_HASH=$argon2id$v=19$m=65536,t=3,p=4$...

# Storage Configuration
STORAGE_TYPE=local  # or 's3'
STORAGE_ROOT=/app/storage

# S3 Configuration (if STORAGE_TYPE=s3)
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_BUCKET=my-cdn-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key

# Application Configuration
BASE_URL=https://cdn.xdata.si
PORT=3000
NODE_ENV=production

# Feature Flags
READONLY=false
ENABLE_METRICS=true

# Security
SESSION_SECRET=generate-a-random-secret-at-least-32-chars
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000  # 1 minute in ms

# Thumbnails
THUMBNAIL_SIZE=128
THUMBNAIL_QUALITY=85

# Logging
LOG_LEVEL=info  # debug, info, warn, error
